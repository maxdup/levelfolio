<!doctype html>
<html lang="en" ng-app="folioApp" ng-strict-di
      ng-controller="RootController">
<head>
  <meta charset="utf-8">
  <title>Maxime Dupuis</title>
  <base href="/"/>
  <meta name="viewport" content="width=device-width, initial-scale=1,
                                 maximum-scale=0.75, user-scalable=0"/>
</head>

<body ng-class="{'panorama':focus360}">
  <!-- Map panoramas -->
  <map-panorama ng-model="current_panorama" focus="focus360">
  </map-panorama>

  <!-- page background -->
  <div class="page-centering page-background"></div>

  <!-- site navigation -->
  <div class="page-centering page-nav">
    <navbar></navbar>
  </div>

  <!-- scrollable container -->
  <div id="scrollable">
    <div class="pano-clickable" ng-click="focus360 = true"></div>

    <!-- site content -->
    <div class="page-centering">
      <div class="content" id="content">
        <ui-view ng-class="{ reverse: reverse}" class="view"></ui-view>
      </div>
    </div>
  </div>
  <noscript><h1>Hey! this site requires javascript enabled to function.</h1>
    <p>You either need to switch to a browser that supports javascript, or you need to disable your javascript blocker (don't worry, the only thing we track with javascript on this site is your prefered language).</p></noscript>
</body>
</html>
